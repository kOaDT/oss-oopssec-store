generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  password            String
  role                UserRole             @default(CUSTOMER)
  addressId           String?
  address             Address?             @relation(fields: [addressId], references: [id])
  carts               Cart[]
  orders              Order[]
  supportAccessTokens SupportAccessToken[]

  @@map("users")
}

model Product {
  id         String      @id @default(cuid())
  name       String
  price      Float
  description String?
  imageUrl   String
  cartItems  CartItem[]
  reviews    Review[]

  @@map("products")
}

model Cart {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  cartItems CartItem[]

  @@map("carts")
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int

  @@map("cart_items")
}

model Order {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  addressId String
  address   Address     @relation(fields: [addressId], references: [id])
  total     Float
  status    OrderStatus @default(PENDING)

  @@map("orders")
}

model Address {
  id        String   @id @default(cuid())
  street    String
  city      String
  state     String
  zipCode   String
  country   String
  users     User[]
  orders    Order[]

  @@map("addresses")
}

model Flag {
  id              String         @id @default(cuid())
  flag            String
  slug            String         @unique
  cve             String?
  markdownFile    String
  walkthroughSlug String?
  category        FlagCategory   @default(OTHER)
  difficulty      FlagDifficulty @default(MEDIUM)
  foundFlag       FoundFlag?

  @@map("flags")
}

enum FlagCategory {
  INJECTION
  AUTHENTICATION
  AUTHORIZATION
  REQUEST_FORGERY
  INFORMATION_DISCLOSURE
  INPUT_VALIDATION
  CRYPTOGRAPHIC
  REMOTE_CODE_EXECUTION
  OTHER
}

enum FlagDifficulty {
  EASY
  MEDIUM
  HARD
}

model Review {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  content   String
  author    String
  createdAt DateTime @default(now())

  @@map("reviews")
}

enum UserRole {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model SupportAccessToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  email     String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("support_access_tokens")
}

model FoundFlag {
  id      String   @id @default(cuid())
  flagId  String
  flag    Flag     @relation(fields: [flagId], references: [id], onDelete: Cascade)
  foundAt DateTime @default(now())

  @@unique([flagId])
  @@map("found_flags")
}

model ProjectInit {
  id          String   @id @default(cuid())
  initializedAt DateTime @default(now())

  @@map("project_init")
}

model VisitorLog {
  id        String   @id @default(cuid())
  ip        String
  userAgent String?
  path      String
  sessionId String?
  createdAt DateTime @default(now())

  @@map("visitor_logs")
}
